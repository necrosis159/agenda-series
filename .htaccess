RewriteEngine on

RewriteRule ^les-series$ series/series_list.php [L]
RewriteRule ^les-series/([a-zA-Z0-9]+)$ series/serie_detail.php?&name=$1 [L]
RewriteRule ^les-series/([a-zA-Z0-9]+)/saison-([0-9]+)$ series/season_detail.php?name=$1&saison=$2 [L]
RewriteRule ^les-series/([a-zA-Z0-9]+)/saison-([0-9]+)/episode-([0-9]+)$ series/episode_detail.php?name=$1&saison=$2&episode=$3 [L]
RewriteRule ^account/([a-zA-Z0-9]+)$ account/account_user.php?username=$1 [L]
RewriteRule ^account/series/([a-zA-Z0-9]+)$ account/account_user_series.php?username=$1 [L]